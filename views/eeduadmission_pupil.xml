<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_eeduadmission_pupil_kanban">
        <field name="name">eeduadmission.pupil.kanban</field>
        <field name="model">eeduadmission.pupil</field>
        <field name="arch" type="xml">
            <kanban class="eeduadmission_pupil_kanban">
                <field name="admission_no"/>
                <field name="st_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="o_kanban_image">
                                <t t-if="record.image.raw_value">
                                    <img t-att-src="kanban_image('eeduadmission.pupil', 'image', record.id.raw_value)"/>
                                </t>
                                <t t-if="!record.image.raw_value">
                                    <img t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title oe_partner_heading"><field name="st_name"/></strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_eeduadmission_pupil_tree" model="ir.ui.view">
        <field name="name">eeduadmission.pupil.tree</field>
        <field name="model">eeduadmission.pupil</field>
        <field name="arch" type="xml">
            <tree string="Pupil">
                <field name="admission_no"/>
                <field name="pupil_id"/>
                <field name="st_name"/>
            </tree>
        </field>
    </record>

    <record id="view_eeduadmission_pupil_form" model="ir.ui.view">
        <field name="name">eeduadmission.pupil.form</field>
        <field name="model">eeduadmission.pupil</field>
        <field name="arch" type="xml">
            <form string="Pupil">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="student_documents" type="object" widget="statinfo"
                                class="oe_stat_button" icon="fa-calendar" string="Documents">
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_left oe_avatar" />
                    <div class="oe_title">
                        <h3>
                            <label for ='pupil_id'/>
                            <field name="admission_no" attrs="{'invisible': [('pupil_id', '!=','')]}"/>
                            <field name="pupil_id" />
                        </h3>
                        <h2>
                            <table>
                                <tr>
                                    <td style="padding-right:10px;"><field name="st_name" placeholder="Name" required="1"/></td>
                                </tr>
                                <tr>
                                    <td style="padding-right:10px;"><field name="st_name_b" placeholder="নামের প্রথম অংশ" required="0"/></td>

                                </tr>
                            </table>
                        </h2>
                    </div>
                    <notebook>
                        <page string="Student Details">
                            <separator string="Basic Details"/>
                            <separator string="Student Info"/>
                            <group>
                                <group>
                                    <field name="st_father_name"/>
                                    <field name="st_mother_name"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contact Details">
                        </page>
                        <page string="Class History">
                        </page>
                    </notebook>

                </sheet>

            </form>
        </field>
    </record>

    <record id="pupil_search" model="ir.ui.view">
        <field name="name">Pupil</field>
        <field name="model">eeduadmission.pupil</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="pupil_id"/>
                <group expand='0' string='Group by...'>
                    <filter string='Religious' icon="fa-pencil-square-o" domain="[]" context="{'group_by' : 'religious_id'}"/>
               </group>
           </search>
        </field>
    </record>

    <record id="action_eeduadmission_pupil" model="ir.actions.act_window">
        <field name="name">Pupil</field>
        <field name="res_model">eeduadmission.pupil</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="pupil_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the your first student here.
            </p>
        </field>
    </record>
    <menuitem id="eedustudent_parent_menu_id" name="Eedu Education" sequence="10"/>

    <menuitem id="eedustudent_abedon_menu_id" name="Student abedon"
            parent="eedustudent_parent_menu_id" action="action_eedustudent_abedon"/>

    <menuitem id="eeduadmission_pupil_menu_id" name="Admission Pupil"
            parent="eedustudent_parent_menu_id" action="action_eeduadmission_pupil"/>

</odoo>

