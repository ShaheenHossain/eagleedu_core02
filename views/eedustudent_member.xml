<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_eedustudent_member_kanban">
        <field name="name">eedustudent.member.kanban</field>
        <field name="model">eedustudent.member</field>
        <field name="arch" type="xml">
            <kanban class="eedustudent_member_kanban">
                <field name="admission_no"/>
                <field name="st_name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_res_partner_kanban">
                            <div class="o_kanban_image">
                                <t t-if="record.image.raw_value">
                                    <img t-att-src="kanban_image('eedustudent.member', 'image', record.id.raw_value)"/>
                                </t>
                                <t t-if="!record.image.raw_value">
                                    <img t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title oe_partner_heading"><field name="st_name"/></strong>
                                <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_eedustudent_member_tree" model="ir.ui.view">
        <field name="name">eedustudent.member.tree</field>
        <field name="model">eedustudent.member</field>
        <field name="arch" type="xml">
            <tree string="Student">
                <field name="admission_no"/>
                <field name="member_id"/>
                <field name="st_name"/>
            </tree>
        </field>
    </record>

    <record id="view_eedustudent_member_form" model="ir.ui.view">
        <field name="name">eedustudent.member.form</field>
        <field name="model">eedustudent.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="student_documents" type="object" widget="statinfo"
                                class="oe_stat_button" icon="fa-calendar" string="Documents">
                        </button>
                    </div>
                    <field name="st_image" widget="image" class="oe_left oe_avatar" />
                    <div class="oe_title">
                        <h3>
                            <label for ='member_id'/>
                            <field name="admission_no"/>
<!--                            attrs="{'invisible': [('student_id', '!=','')]}-->
                            <field name="member_id" />
                            <field name="nationality" />
                            <field name="country_id" />
                            <field name="per_country_id" />
                        </h3>
                        <h2>
                            <table>
                                <tr>
                                    <td style="padding-right:10px;"><field name="st_name" placeholder="Name" required="1"/></td>
                                </tr>
                                <tr>
                                    <td style="padding-right:10px;"><field name="st_name_b" placeholder="নামের প্রথম অংশ" required="0"/></td>

                                </tr>
                            </table>
                        </h2>
                    </div>
                    <notebook>
                        <page string="Member Details">
                            <separator string="Basic Details"/>
                            <separator string="Member Info"/>
                            <group>
                                <group>
                                    <field name="st_father_name"/>
                                    <field name="st_mother_name"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contact Details">
                        </page>
                        <page string="Class History">
                        </page>
                    </notebook>

                </sheet>

            </form>
        </field>
    </record>

    <record id="eedustudent_member_search" model="ir.ui.view">
        <field name="name">Member</field>
        <field name="model">eedustudent.member</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="member_id"/>
                <group expand='0' string='Group by...'>
                    <filter string='Religious' icon="fa-pencil-square-o" domain="[]" context="{'group_by' : 'religious_id'}"/>
               </group>
           </search>
        </field>
    </record>

    <record id="action_eedustudent_member" model="ir.actions.act_window">
        <field name="name">Member</field>
        <field name="res_model">eedustudent.member</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="eedustudent_member_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the your first student here.
            </p>
        </field>
    </record>

    <record id="seq_eedustudent_member" model="ir.sequence">
        <field name="name">Member Seq</field>
        <field name="res_model">eedustudent.member</field>
        <field name="code">eedustudent.member</field>
        <field name="prefix">SM</field>
        <field name="number_increment">1</field>
        <field name="padding">6</field>
    </record>

    <menuitem id="eedustudent_parent_menu_id" name="Eedu Education" sequence="10"/>

    <menuitem id="eedustudent_abedon_menu_id" name="Student abedon"
            parent="eedustudent_parent_menu_id" action="action_eedustudent_abedon"/>

    <menuitem id="eedustudent_student_menu_id" name="Admission Student"
            parent="eedustudent_parent_menu_id" action="action_eedustudent_student"/>

    <menuitem id="eedustudent_member_menu_id" name="Admission Member"
            parent="eedustudent_parent_menu_id" action="action_eedustudent_member"/>

</odoo>

